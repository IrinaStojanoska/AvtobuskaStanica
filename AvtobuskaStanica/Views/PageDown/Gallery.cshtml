<!DOCTYPE html>
<html>
<head>
    <style>
        * {
            box-sizing: border-box;
        }

        .column {
            float: left;
            width: 33.33%;
            padding: 5px;
        }

        /* Clearfix (clear floats) */
        .row::after {
            content: "";
            clear: both;
            display: table;
        }
    </style>
</head>
<body>



    <div class="row">
        <div class="column">
            <img src="~/Content/busstation1.jpg" alt="Snow" style="width:350px; height:250px">
        </div>
        <div class="column">
            <img src="~/Content/busstation2.jpg" alt="Forest" style="width:350px; height:250px">
        </div>

        <div class="column">
            <img src="~/Content/busstaion4.jpg" alt="Mountains" style="width:350px; height:250px">
        </div>
        <div class="column">
            <img src="~/Content/busstation5.jpg" alt="Mountains" style="width:350px; height:250px">
        </div>
    </div>
    <a href="@Url.Action("Index", "Home")">
        <input type="submit" class="btn btn-outline-primary" value="Назад" />
    </a>
</body>
</html>
